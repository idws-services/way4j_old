<?xml version="1.0" encoding="UTF-8"?>
<system xmlns="http://www.example.org/NewXMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.example.org/NewXMLSchema way4j/tools/systemBuild/systemConfig.xsd ">

	<configurations systemName="testApp">
		
		<dataSource user="postgresql" url="jdbc:postgresql://localhost:5432/idws_service_1" password="postgresql" driver="org.postgresql.Driver">
			<hibernateProps>
				 <prop name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			</hibernateProps>
		</dataSource>
		
		<resourceLocations>
			<controller location="way4j.application.controller"/>
			<dao location="way4j.application.dao"/>
			<lazyDataModel location="way4j.application.view"/>
			<model location="way4j.application.model"/>
			<service location="way4j.application.service"/>
			<view location="way4j.application.view"/>
		</resourceLocations>
		
	</configurations>
	
	<modules>
		<module name="Usuario">
			
			<bean name="Usuario" table="m_usuario" type="M">
				
				<property name="id_usuario" type="Bean[]" primaryKey="true" manyToManyTable="mm_qqr_coisa" service="Algum"/>
				<property name="nome" type="String" maxLength="50"/>
				<property name="telefone" type="String" maxLength="20"/>
				<property name="id_pais" type="Bean" service="LtPais"/>
			</bean>
			
			<bean name="LtPais" type="A">
				<property name="ID_PAIS" type="Integer" primaryKey="true"/>
				<property name="NOME" type="String"/>
			</bean>
			
		</module>
	</modules>
	
</system>
